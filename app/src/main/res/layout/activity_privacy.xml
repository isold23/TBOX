<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrivacyActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/text_terms_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在这里放置用户协议和隐私政策的内容。"
                android:textSize="16sp" />

    </ScrollView>

    <Button
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同意"
            android:layout_below="@+id/text_terms_privacy"
            android:layout_marginTop="16dp" tools:ignore="MissingConstraints,NotSibling"/>

</androidx.constraintlayout.widget.ConstraintLayout>